---
import Layout from '@/layouts/Layout.astro';
import { FeatureCardWrapper } from '@/components/FeatureCardWrapper';
import { Button } from '@/components/ui/button';
---

<Layout title="Tank Planner">
  <!-- Hero Section -->
  <section class="relative py-12 md:py-20 px-4 overflow-hidden">
    <!-- Background elements with improved responsive sizing -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute -top-16 md:-top-24 -right-16 md:-right-24 w-64 md:w-96 h-64 md:h-96 rounded-full bg-gradient-to-br from-cyan-400/40 to-blue-500/40 dark:from-cyan-500/20 dark:to-blue-600/20 blur-3xl"></div>
      <div class="absolute -bottom-24 md:-bottom-32 -left-24 md:-left-32 w-64 md:w-96 h-64 md:h-96 rounded-full bg-gradient-to-tr from-teal-400/40 to-emerald-500/40 dark:from-teal-500/20 dark:to-emerald-600/20 blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-full h-full max-w-4xl max-h-96 bg-gradient-to-r from-blue-50 to-cyan-50/50 dark:from-blue-900/30 dark:to-cyan-900/30 rounded-3xl -z-10 blur-xl opacity-60"></div>
    </div>
    
    <div class="container mx-auto max-w-4xl relative">
      <div class="text-center backdrop-blur-sm py-8 md:py-12 px-4 md:px-6 rounded-2xl bg-white/30 dark:bg-gray-900/50 shadow-lg border border-white/40 dark:border-gray-700/40">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-4 md:mb-6 leading-tight">
          <span class="bg-gradient-to-r from-cyan-600 to-teal-600 dark:from-cyan-400 dark:to-teal-400 bg-clip-text text-transparent drop-shadow-sm">
            Design Your Perfect Aquarium
          </span>
        </h1>
        <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 mb-6 md:mb-10 max-w-2xl mx-auto">
          Plan your tank, select compatible fish, and create a thriving aquatic environment.
        </p>
        <div class="flex justify-center">
          <a href="/planner">
            <Button className="px-6 py-6 text-lg bg-gradient-to-r from-cyan-500 to-blue-600 dark:from-cyan-600 dark:to-blue-700 hover:opacity-90 transition-all hover:scale-105">
              Get Started
            </Button>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 md:py-20 px-4 bg-gradient-to-b from-white to-blue-50 dark:from-gray-900 dark:to-gray-800 relative overflow-hidden">
    <div class="container mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-10 md:mb-16 text-gray-800 dark:text-gray-100">
        <span class="bg-gradient-to-r from-cyan-600 to-teal-600 dark:from-cyan-400 dark:to-teal-400 bg-clip-text text-transparent">
          Everything You Need for Aquarium Success
        </span>
      </h2>
      <div class="max-w-5xl mx-auto">
        <FeatureCardWrapper client:load />
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-20 px-4 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-cyan-500 to-blue-600 dark:from-cyan-700 dark:to-blue-800 -z-10"></div>
    
    <div class="container mx-auto text-center max-w-4xl relative z-10">
      <div class="bg-white/10 backdrop-blur-sm p-6 md:p-10 rounded-2xl shadow-2xl border border-white/20 dark:bg-gray-800/30 dark:border-gray-700/30">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 md:mb-6 text-white dark:text-gray-100 drop-shadow-md">Ready to Create Your Dream Aquarium?</h2>
        <p class="text-white/90 dark:text-gray-300 mb-6 md:mb-10 max-w-2xl mx-auto text-base md:text-lg">
          Our easy-to-use planner will help you design the perfect underwater ecosystem.
        </p>
        <a href="/planner">
          <Button variant="secondary" size="lg" className="px-8 py-6 text-lg bg-white hover:bg-white/90 text-cyan-600 dark:bg-gray-800 dark:text-cyan-400 dark:hover:bg-gray-700 font-medium transition-all hover:scale-105">
            Start Planning Now
          </Button>
        </a>
      </div>
    </div>
  </section>
</Layout>
